@page "/contact"
@using EbanisteriaLopezProyectoFinal.Components.Services
@inject ContactoService ContactoService

<PageTitle>Contacto</PageTitle>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="mb-4 text-center">Contáctanos</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="bg-white shadow rounded-4 p-4 h-100">
                    <div class="d-flex align-items-start mb-3" data-aos="fade-right" data-aos-delay="300">
                        <i class="bi bi-envelope-fill text-primary me-3 fs-4"></i>
                        <div>
                            <h5 class="fw-bold mb-0">Dirección de correo electrónico</h5>
                            <p class="text-secondary mb-0">
                                @(contactoInfo?.Correo ?? "correo@ejemplo.com")
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-3" data-aos="fade-right" data-aos-delay="400">
                        <i class="bi bi-whatsapp text-primary me-3 fs-4"></i>
                        <div>
                            <h5 class="fw-bold mb-0">Teléfono | WhatsApp</h5>
                            <p class="text-secondary mb-0">
                                @(contactoInfo?.Telefono ?? "+1 809 000 0000")
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-3" data-aos="fade-right" data-aos-delay="500">
                        <i class="bi bi-clock-fill text-primary me-3 fs-4"></i>
                        <div>
                            <h5 class="fw-bold mb-0">Horario de oficina</h5>
                            <p class="text-secondary mb-0">
                                @(contactoInfo?.Horario ?? "Lunes a Viernes 9am - 5pm")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="bg-white shadow rounded-4 p-4 h-100">
                    <h5 class="fw-bold mb-3">Escríbenos</h5>
                    <EditForm>
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mensaje</label>
                            <textarea class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mapa-contacto mt-5">
    <iframe class="w-100"
            style="border:0; height: 400px;"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3827.581759812223!2d-70.67002142412205!3d18.897111856574934!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8ea562965f670a33%3A0x2073e37dbdc4e923!2sVilla%20Altagracia%2C%20Rep%C3%BAblica%20Dominicana!5e0!3m2!1ses!2sdo!4v1690671304012!5m2!1ses!2sdo">
    </iframe>
</section>

@code {
    private Contacto? contactoInfo;

    protected override async Task OnInitializedAsync()
    {
        contactoInfo = await ContactoService.ObtenerAsync();
    }
}
