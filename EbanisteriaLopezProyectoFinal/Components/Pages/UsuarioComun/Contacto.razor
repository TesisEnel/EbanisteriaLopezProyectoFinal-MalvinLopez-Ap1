                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Nombre de pila" @bind="contactForm.FirstName" required />
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Apellido" @bind="contactForm.LastName" required />
