@page "/servicios"
@inject ServicioService ServicioService
@using EbanisteriaLopezProyectoFinal.Components.Models
@using EbanisteriaLopezProyectoFinal.Components.Services

<PageTitle>Servicios</PageTitle>

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Nuestros Servicios</h2>
            <p class="text-muted">Descubre lo que podemos hacer por ti</p>
        </div>

        @if (servicios?.Any() == true)
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                @foreach (var servicio in servicios)
                {
                    <div class="col d-flex align-items-stretch">
                        <div class="card border-0 shadow-sm w-100 text-center h-100">
                            <div class="card-body d-flex flex-column">
                                <i class="@servicio.Icono display-4 text-primary mb-3"></i>
                                <h5 class="card-title fw-semibold">@servicio.Titulo</h5>
                                <p class="card-text flex-grow-1 text-muted">@servicio.Descripcion</p>
                                <div class="mt-3">
                                    <a href="/contact" class="btn btn-outline-primary btn-sm">Solicitar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center">
                <p class="text-muted fs-5">No hay servicios disponibles por el momento.</p>
            </div>
        }
    </div>
</section>

@code {
    private List<Servicio> servicios = new();

    protected override async Task OnInitializedAsync()
    {
        servicios = await ServicioService.Listar(s => true);
    }
}
