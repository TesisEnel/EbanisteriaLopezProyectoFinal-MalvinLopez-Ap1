@page "/admin/ventas"
@attribute [Authorize(Roles = "Admin")]
@inject VentaService VentaService
@inject NavigationManager NavigationManager
@using EbanisteriaLopezProyectoFinal.Components.Models
@using EbanisteriaLopezProyectoFinal.Components.Services
@using Microsoft.AspNetCore.Authorization

<h3 class="mb-4">Historial de Ventas</h3>

@if (ventas == null)
{
    <p>Cargando ventas...</p>
}
else if (!ventas.Any())
{
    <p class="text-muted">No hay ventas registradas.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-success">
                <tr>
                    <th>Cliente</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Método de Pago</th>
                    <th>Voucher</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Productos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in ventas)
                {
                    <tr>
                        <td>@venta.NombreCliente</td>
                        <td>@venta.CorreoUsuario</td>
                        <td>@venta.Telefono</td>
                        <td>@venta.Direccion</td>
                        <td>@venta.MetodoPago</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(venta.UrlVoucher))
                            {
                                <a href="@venta.UrlVoucher" target="_blank">Ver</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@venta.Total.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                        <td>
                            <ul class="mb-0">
                                @foreach (var item in venta.Items)
                                {
                                    <li>
                                        <strong>ID:</strong> @item.ProductoId |
                                        <strong>Cantidad:</strong> @item.Cantidad |
                                        <strong>Precio:</strong> @item.PrecioUnitario.ToString("C", new System.Globalization.CultureInfo("es-DO"))
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Venta>? ventas;

    protected override async Task OnInitializedAsync()
    {
        ventas = await VentaService.Listar();
    }
}
