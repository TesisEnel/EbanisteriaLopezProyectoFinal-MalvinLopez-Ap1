@page "/mis-pedidos"
@inject VentaService VentaService
@inject AuthenticationStateProvider AuthStateProvider
@using EbanisteriaLopezProyectoFinal.Components.Models
@using EbanisteriaLopezProyectoFinal.Components.Services
@using Microsoft.AspNetCore.Components.Authorization

<main class="container py-5">
    <h3 class="mb-4 text-center text-primary fw-bold">Mis Pedidos</h3>

    @if (ventas == null)
    {
        <div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 200px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando tus pedidos...</span>
            </div>
            <p class="mt-3 text-muted">Cargando tus pedidos...</p>
        </div>
    }
    else if (!ventas.Any())
    {
        <div class="alert alert-info text-center py-4 shadow-sm rounded-lg" role="alert">
            <h4 class="alert-heading text-primary mb-3">¡No tienes pedidos registrados!</h4>
            <p class="lead">Parece que aún no has realizado ninguna compra con nosotros.</p>
            <hr>
            <p class="mb-0">¡Explora nuestra tienda y haz tu primer pedido!</p>
            <a href="/store" class="btn btn-primary mt-3">Ir a la Tienda</a>
        </div>
    }
    else
    {
        <div class="mb-5">
            <h4 class="text-success mb-3">Pedidos en Proceso</h4>
            @if (ventasEnProceso.Any())
            {
                <div class="row justify-content-center">
                    @foreach (var venta in ventasEnProceso)
                    {
                        @* Tarjeta de pedido *@
                        @PedidoCard(venta)
                    }
                </div>
            }
            else
            {
                <p class="text-muted fst-italic">No tienes pedidos en proceso actualmente.</p>
            }
        </div>

        <div>
            <h4 class="text-secondary mb-3">Historial de Pedidos (Entregados)</h4>
            @if (ventasEntregadas.Any())
            {
                <div class="row justify-content-center">
                    @foreach (var venta in ventasEntregadas)
                    {
                        @PedidoCard(venta)
                    }
                </div>
            }
            else
            {
                <p class="text-muted fst-italic">No tienes pedidos entregados aún.</p>
            }
        </div>
    }
</main>

@code {
    private List<Venta>? ventas;
    private List<Venta> ventasEnProceso = new();
    private List<Venta> ventasEntregadas = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var email = user.Identity.Name!;
            ventas = await VentaService.ObtenerVentasPorCorreoAsync(email);

            ventasEnProceso = ventas.Where(v => v.EstadoEntrega != "Entregado").ToList();
            ventasEntregadas = ventas.Where(v => v.EstadoEntrega == "Entregado").ToList();
        }
    }

    private int ObtenerProgreso(string estado)
    {
        return estado switch
        {
            "Pedido Recibido" => 25,
            "Enviado" => 50,
            "En Camino" => 75,
            "Entregado" => 100,
            _ => 0
        };
    }

    RenderFragment PedidoCard(Venta venta) => __builder =>
    {
        <div class="col-lg-8 mb-4">
            <div class="card h-100 shadow-sm border-0 rounded-lg overflow-hidden">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 fw-bold">Pedido #@venta.VentaId</h5>
                    <small class="text-white-50">Fecha: @venta.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="card-text mb-1"><strong>Total:</strong> <span class="text-success fw-bold fs-5">@venta.Total.ToString("C", new System.Globalization.CultureInfo("es-DO"))</span></p>
                            <p class="card-text mb-1"><strong>Método de Pago:</strong> <span class="fw-semibold">@venta.MetodoPago</span></p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="card-text mb-2"><strong>Estado de Entrega:</strong> <span class="fw-semibold text-info">@venta.EstadoEntrega</span></p>
                        </div>
                    </div>

                    <div class="progress mb-4" style="height: 28px;">
                        <div class="progress-bar bg-primary text-white fw-bold d-flex align-items-center justify-content-center" role="progressbar" style="width: @ObtenerProgreso(venta.EstadoEntrega)%;" aria-valuenow="@ObtenerProgreso(venta.EstadoEntrega)" aria-valuemin="0" aria-valuemax="100">
                            @venta.EstadoEntrega
                        </div>
                    </div>

                    <h6 class="mt-3 mb-3 text-dark fw-bold border-bottom pb-2">Artículos del Pedido:</h6>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in venta.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center py-2 px-0">
                                <span class="text-muted">Producto ID: <strong>@item.ProductoId</strong></span>
                                <span class="badge bg-secondary rounded-pill p-2">Cantidad: @item.Cantidad</span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-light text-muted text-end py-3">
                    <small>Gracias por tu compra en Ebanisteria Lopez.</small>
                </div>
            </div>
        </div>
;
    };
}
