@page "/cart"
@using EbanisteriaLopezProyectoFinal.Components.Services
@inject CarritoService CarritoService
@inject NavigationManager NavigationManager

<PageTitle>Carrito de Compras</PageTitle>

<section class="container py-5">
    <h2 class="mb-4 text-center">🛒 Carrito de Compras</h2>

    @if (Items.Count == 0)
    {
        <div class="alert alert-info text-center">
            Tu carrito está vacío.
        </div>
    }
    else
    {
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Items)
                {
                    <tr>
                        <td>@item.Producto.Detalle?.Descripcion</td>
                        <td>@item.Producto.Precio.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                        <td>@item.Cantidad</td>
                        <td>@(item.Cantidad* item.Producto.Precio).ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="@(() => Eliminar(item.Producto.ProductoId))">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Total:</td>
                    <td colspan="2" class="fw-bold">
                        @Items.Sum(i => i.Producto.Precio * i.Cantidad).ToString("C", new System.Globalization.CultureInfo("es-DO"))
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-end">
            <button class="btn btn-secondary me-2" @onclick="Vaciar">Vaciar carrito</button>
            <button class="btn btn-primary" @onclick="IrAPagar">Ir a pagar</button>
        </div>
    }
</section>

@code {
    private IReadOnlyList<CarritoItem> Items => CarritoService.ObtenerItems();

    private void Eliminar(int productoId)
    {
        CarritoService.EliminarDelCarrito(productoId);
    }

    private void Vaciar()
    {
        CarritoService.VaciarCarrito();
    }

    private void IrAPagar()
    {
        // Aquí podrías redirigir a una página de checkout o mostrar un modal
        NavigationManager.NavigateTo("/checkout");
    }
}
